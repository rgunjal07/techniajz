pipeline {
    agent {
        // Run the pipeline inside a Docker-enabled agent
        docker {
            image 'myjenkins-blueocean:2.414.2' // Docker-in-Docker image
            args '/usr/bin/tini -- /u…'
        }
    }

    environment {
        IMAGE_NAME = "alpine/socat"
        DOCKER_HUB_USER = "rgunjal"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/rgunjal07/techniajz.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image: ${IMAGE_NAME}:latest"
                    docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo "Running tests inside Docker container..."
                    docker.image("${IMAGE_NAME}:latest").inside {
                        // Replace with your actual test command
                        sh 'npm test || echo "No tests found, skipping..."'
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    echo "Pushing image to Docker Hub..."
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("${IMAGE_NAME}:latest").push()
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed!'
        }
        failure {
            echo 'Pipeline failed ❌'
        }
        success {
            echo 'Pipeline succeeded ✅'
        }
    }
}
