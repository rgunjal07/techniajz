pipeline {
    agent any
    tools { nodejs "Node 20" }

      triggers {
        pollSCM '* * * * *'
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                git branch: 'master',
                    url: 'https://github.com/rgunjal07/techniajz.git',
                    credentialsId: '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'  // üîí Jenkins credential ID
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
               sh 'npm ci'
            }
        }

         stage('Build') {
            steps {
                echo "Building..."
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'npm test'
            }
            post {
                always {
                    junit 'reports/**/*.xml'
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'master'
            }
            steps {
                echo "Deploying application..."
                sh './deploy.sh'
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build and deployment successful!"
        }
        failure {
            echo "‚ùå Build failed!"
        }
        always {
            cleanWs()
        }
    }
}
